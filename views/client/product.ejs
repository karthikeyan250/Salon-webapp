<div class="container" style="margin-top: 50px;">
	<div class="row">
		<body style="background-color:rgb(230,230,250);"></body>
		<div class="col m4">
			<img src="/<%= product.img %>" style="height: 300px; width: 100%;" />
		</div>
		<div class="col m8">
			
			<div class="row" style="color:blueviolet !important ;font-size: 150%"><%= product.name %></div>
			<div class="row" style="color:blueviolet !important ;font-size: 150%"><%= product.specs %></div>
			<div class="row" style="color:blueviolet !important ;font-size: 150%"><%= product.desc %></div>
			<div class="row" style="color:blueviolet !important ;font-size: 150%">Price:<%= product.price %></div>
	  <div class="row" style="color:blueviolet !important ;font-size: 150%">seller: <%= product.seller %></div>
	  <div class="row" style="color:blueviolet !important ;font-size: 150%">seller contact number: <%= product.number %></div>
	  
      <div class="row right">
        <a href="/product/cart/<%= product._id %>"
          class="waves-effect waves-light btn  deep-purple darken-2"
						><i class="material-icons left">shopping_cart</i>add to cart</a
					>
      </div>
		</div>
	</div>
</div>
