<img src="/images/haircut.png" alt="Flowers in Chania" width="150" height="150">
<div class="container" style="margin-top: 1px;">
	<body style="background-color:rgb(230,230,250);"></body>
	<div class="row">
		<div class="col m4">
			<img src="/<%= product.img %>" style="height: 300px; width: 100%;" />
		</div>
		<div class="col m8">
			<div class="row">
				<div class="col right">
          <a href="/product/edit/<%= product._id %>"
          class="waves-effect waves-light btn  deep-purple darken-2"
						><i class="material-icons left">edit</i>edit</a
					>
					<a href="/product/delete/<%= product._id %>"
						class="waves-effect waves-light btn  red"
							><i class="material-icons left">delete</i>delete</a
						>
				</div>
			</div>
			<div class="row"  style="color:darkviolet !important ;font-size: 150% !important;"><%= product.name %></div>
			<div class="row" style="color:darkviolet;font-size: 150% !important;"><%= product.specs %></div>
			<div class="row" style="color:darkviolet;font-size: 150% !important;"><%= product.desc %></div>
			<div class="row" style="color:darkviolet;font-size: 150% !important;">Price : <%= product.price %></div>
			<div class="row"  style="color:darkviolet;font-size: 150% !important;">Shop name: <%= product.seller %></div>
		</div>
	</div>
</div>

